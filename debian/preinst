#! /bin/sh
# preinst script for resample
#
# see: dh_installdeb(1)

set -e

clisp_dir=/usr/lib/clisp-2.48+
mem=$clisp_dir/base/lispinit.mem

# summary of how this script can be called:
#        * <new-preinst> `install'
#        * <new-preinst> `install' <old-version>
#        * <new-preinst> `upgrade' <old-version>
#        * <old-preinst> `abort-upgrade' <new-version>
#
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    install|upgrade)
	rm -f $mem  || true
	# remove old mem files
	if [ -f ${clisp_dir}/base/lispinit-clean.mem ] ; then
	 rm -f ${clisp_dir}/base/lispinit-clean.mem
	fi

	# check for old mem files for previous installs:
	if [ -f /usr/lib/clisp/base/lispinit.mem ] || [ -f /usr/lib/clisp/base/lispinit.mem ] ; then
	  [ -f /usr/lib/clisp/base/lispinit.mem ] && rm -f /usr/lib/clisp/base/lispinit.mem
	  [ -f /usr/lib/clisp/base/lispinit.mem ] && rm /usr/lib/clisp/base/lispinit.mem
	  rmdir /usr/lib/clisp/base/ || true
	  rmdir /usr/lib/clisp/ || true
	fi
	;;
    abort-upgrade)
	;;
    *)
        echo "preinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


