# Makefile for CLISP module set pari

CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
PARI_HOME = @PARI_HOME@
INCLUDES = -I./ -I../ -I$(PARI_HOME)/src/headers/ -I$(PARI_HOME)/build/

CLISP = clisp -q -norc

LN = ln

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = cpari.o pari.o link.sh Makefile pari.lisp pari.fas
distribdir =

all : pari.o cpari.o pari.fas

pari.fas pari.c : pari.lisp
	$(CLISP) -c pari.lisp

pari.o : pari.c
	$(CC) $(CPPFLAGS) $(CFLAGS) $(INCLUDES) -c pari.c

cpari.o : cpari.c
	$(CC) $(CPPFLAGS) $(CFLAGS) $(INCLUDES) -c cpari.c

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a

distclean : clean
	rm -f *.dvi

force :

