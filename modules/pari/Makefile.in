# Makefile for CLISP module set pari

srcdir = @srcdir@
CC = @CC@
PARICPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES = $$($(CLISP) -b)/linkkit

LN = ln
LN_S = ln -s

MAKE = make

SHELL = /bin/sh

GENERATED = pari.o cpari.o pari.fas preload.lisp
DISTRIBFILES = link.sh Makefile $(GENERATED) $(srcdir)/pari.lisp
distribdir =

# default target: make the module
clisp-module : $(GENERATED)

pari.fas pari.c : $(srcdir)/pari.lisp
	$(CLISP) -c $< -o ./

pari.o : pari.c config.h
	$(CC) $(CPPFLAGS) $(PARICPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c $<

cpari.o : $(srcdir)/cpari.c
	$(CC) $(CPPFLAGS) $(PARICPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c $<

preload.lisp : $(srcdir)/preload.lisp
	$(LN_S) $< .

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a

distclean : clean
	rm -f *.dvi

force :

