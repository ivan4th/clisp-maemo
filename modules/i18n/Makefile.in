# Makefile for CLISP module set i18n

srcdir = @srcdir@
CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES = $$($(CLISP) -b)/linkkit

LN = ln
LN_S = ln -s

MAKE = make

SHELL = /bin/sh

GENERATED = i18n.fas gettext.o preload.lisp
DISTRIBFILES = link.sh Makefile $(GENERATED) $(srcdir)/i18n.lisp
distribdir =

# default target: make the module
clisp-module : $(GENERATED)

%.fas: $(srcdir)/%.lisp
	$(CLISP) -c $< -o ./

gettext.o : gettext.m.c config.h
	$(CC) $(CPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c gettext.m.c -o gettext.o

gettext.m.c : $(srcdir)/gettext.c
	$(CLISP) -C $(INCLUDES)/modprep $< ./

preload.lisp : $(srcdir)/preload.lisp
	$(LN_S) $< .

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a

force :

