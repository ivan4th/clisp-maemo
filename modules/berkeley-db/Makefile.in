# Makefile for CLISP module set Berkeley-DB

CC = @CC@
DBCPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES = $(shell $(CLISP) -x '(namestring *lib-directory*)')/linkkit

LN = ln

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = bdb.o link.sh Makefile dbi.lisp preload.lisp
distribdir =

all : bdb.o dbi.fas

dbi.fas : dbi.lisp
	$(CLISP) -c dbi.lisp

bdb.m.c: bdb.c
	$(CLISP) -C $(INCLUDES)/modprep bdb.c

bdb.o : bdb.m.c config.h
	$(CC) $(CPPFLAGS) $(DBCPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c bdb.m.c -o bdb.o

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a *.m.c *.fas *.lib

distclean : clean

force :

