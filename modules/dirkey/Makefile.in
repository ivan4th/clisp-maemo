# Makefile for CLISP module set dirkey

srcdir = @srcdir@
CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES = $$($(CLISP) -b)/linkkit

LN = ln
LN_S = ln -s

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = dirkey.o link.sh Makefile \
	$(srcdir)/dirkey1.lisp $(srcdir)/preload.lisp
distribdir =

all : dirkey.o dirkey1.fas preload.lisp

%.fas: $(srcdir)/%.lisp
	$(CLISP) -c $< -o ./

dirkey.m.c: $(srcdir)/dirkey.c
	$(CLISP) -C $(INCLUDES)/modprep $< ./

dirkey.o : dirkey.m.c config.h
	$(CC) $(CPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c dirkey.m.c -o dirkey.o

preload.lisp : $(srcdir)/preload.lisp
	$(LN_S) $< .

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a *.m.c *.fas *.lib

distclean : clean

force :

