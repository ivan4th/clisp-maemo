#
# Makefile.in for FastCGI CLISP module
#
# $Id$

srcdir = @srcdir@
CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES = $$($(CLISP) -b)/linkkit

LN = ln

MAKE = make

SHELL = /bin/sh

GENERATED = fastcgi.o fastcgi.fas fastcgi_wrappers.o link.sh
DISTRIBFILES = Makefile $(GENERATED) $(srcdir)/fastcgi.lisp $(srcdir)/README
distribdir =

# default target: make the module
clisp-module : $(GENERATED)

fastcgi.c fastcgi.fas:       $(srcdir)/fastcgi.lisp
	$(CLISP) -c $< -o ./

fastcgi.o:       fastcgi.c
	$(CC) $(CPPFLAGS) $(CFLAGS) -I$(INCLUDES) -I.. -c $<

fastcgi_wrappers.o:       $(srcdir)/fastcgi_wrappers.c
	$(CC) $(CPPFLAGS) $(CFLAGS) -I$(INCLUDES) -I.. -c $<

link.sh : $(srcdir)/link.sh
	$(LN_S) $< .

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a
	rm -f *.aux *.cp *.fn *.ky *.log *.pg *.toc *.tp *.vr

distclean : clean

force :
