# Makefile for CLISP module syscalls

srcdir = @srcdir@
CC = @CC@
# __EXTENSIONS__ is necessary so that the Solaris headers declare confstr().
# _REENTRANT is necessary so that the Solaris headers declare lgamma_r().
CPPFLAGS = @CPPFLAGS@ -D__EXTENSIONS__ -D_REENTRANT
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES = $$($(CLISP) -b)/linkkit

LN = ln
LN_S = ln -s

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = calls.o link.sh Makefile \
	$(srcdir)/posix.lisp $(srcdir)/preload.lisp
distribdir =

all : calls.o posix.fas libgnu_sc.a preload.lisp

%.fas: $(srcdir)/%.lisp
	$(CLISP) -c $< -o ./

calls.m.c: $(srcdir)/calls.c
	$(CLISP) -C $(INCLUDES)/modprep $< ./

calls.o : calls.m.c config.h
	$(CC) $(CPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c calls.m.c -o calls.o

preload.lisp : $(srcdir)/preload.lisp
	$(LN_S) $< .

am--refresh :

# syscalls relies on src/gllib, so we must also include files in the build dir
libgnu_sc.a : force
	rm -f libgnu_sc.a
	mkdir -p gllib
	test -f gllib/Makefile || sh config.status gllib/Makefile depfiles
	cd gllib; \
	  $(MAKE) srcdir="$(srcdir)/gllib" ACLOCAL_M4="$(srcdir)/Makefile.am" \
		CFLAGS="$(CFLAGS) -I$(INCLUDES)/.."; \
	  $(LN) libgnu.a ../libgnu_sc.a

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a *.m.c *.fas *.lib

distclean : clean

force :

