# Makefile for CLISP module set netica
# <http://norsys.com/netica_c_api.htm>

CC =
CFLAGS =
INCLUDES =
NETICA = /usr/local/netica
CLISP =

LN = ln

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = netica.o link.sh Makefile netica.lisp wrap.lisp
distribdir =

all : netica.o wrap.fas

netica.c : netica.lisp
	$(CLISP) -c netica.lisp

netica.o : netica.c
	$(CC) $(CFLAGS) -I$(INCLUDES) -I$(NETICA) -c netica.c

wrap.fas: wrap.lisp
	$(CLISP) -c wrap.lisp

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

force :

