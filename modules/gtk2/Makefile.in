# Makefile for the CLISP module set gtk2

CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
LIBS = @LIBS@
# defined by AM_PATH_GTK_2_0
GTK_CFLAGS = @GTK_CFLAGS@
GTK_LIBS = @GTK_LIBS@
# defined by PKG_CHECK_MODULES
LIBGLADE_CFLAGS = @LIBGLADE_CFLAGS@
LIBGLADE_LIBS = @LIBGLADE_LIBS@

CLISP = clisp -q -norc
INCLUDES = $$($(CLISP) -x '(namestring *lib-directory*)')/linkkit

LN = ln

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = link.sh Makefile gtk-server.cfg gtk.lisp ui.glade
distribdir =

all : gtk.fas gtk.o

gtk.fas gtk.c : gtk.lisp gtk-server.cfg
	$(CLISP) -c gtk.lisp

gtk.o : gtk.c config.h
	$(CC) $(CPPFLAGS) $(CFLAGS) -I$(INCLUDES) $(GTK_CFLAGS) \
		$(LIBGLADE_CFLAGS) -c gtk.c

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a

distclean : clean

force :
