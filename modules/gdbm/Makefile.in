# Makefile for CLISP module set gdbm

CC = @CC@
GDBMCPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES = $(shell $(CLISP) -x '(namestring *lib-directory*)')/linkkit

LN = ln

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = gdbm.o link.sh Makefile gdbm.lisp test.tst gdbm.xml preload.lisp
distribdir =

all : gdbm.fas gdbm.o

gdbm.fas : gdbm.lisp
	$(CLISP) -c gdbm.lisp

gdbm.o : gdbm.m.c config.h
	$(CC) $(CPPFLAGS) $(GDBMCPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c gdbm.m.c -o gdbm.o

gdbm.m.c : gdbm.c
	$(CLISP) -C $(INCLUDES)/modprep gdbm.c

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a

force :

