# Makefile for CLISP module set postgresql

srcdir = @srcdir@
CC = @CC@
PQCPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES= $$($(CLISP) -b)/linkkit

LN = ln

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = postgresql.o link.sh Makefile \
	$(srcdir)/postgresql.lisp $(srcdir)/sql.lisp
distribdir =

all : postgresql.o postgresql.fas sql.fas

postgresql.c postgresql.fas : $(srcdir)/postgresql.lisp
	$(CLISP) -c $< -o ./

postgresql.o : postgresql.c config.h
	$(CC) $(CPPFLAGS) $(PQCPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c postgresql.c

%.fas: $(srcdir)/%.lisp
	$(CLISP) -c $< -o ./

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

force :

