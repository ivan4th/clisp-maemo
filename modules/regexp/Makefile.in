# Makefile for CLISP module set regexp

CC = @CC@
CPPFLAGS = @CPPFLAGS@
CFLAGS = @CFLAGS@
CLISP = clisp -q -norc
INCLUDES = $$($(CLISP) -b)/linkkit

LN = ln

MAKE = make

SHELL = /bin/sh

DISTRIBFILES = regexi.o link.sh Makefile README regexp.lisp regexp.texinfo regexp.dvi preload.lisp libgnu_rx.a
distribdir =

all : regexp.fas regexi.o libgnu_rx.a

.PHONY : all am--refresh clisp-module clisp-module-distrib clean distclean force

regexp.fas : regexp.lisp
	$(CLISP) -c regexp.lisp

regexi.o : regexi.m.c config.h
	$(CC) $(CPPFLAGS) $(CFLAGS) -I$(INCLUDES) -c regexi.m.c -o regexi.o

regexi.m.c : regexi.c
	$(CLISP) -C $(INCLUDES)/modprep regexi.c

am--refresh :

# regexp relies on src/gllib, so we must also include files in the build dir
libgnu_rx.a : force
	rm -f libgnu_rx.a
	mkdir -p gllib
	test -f gllib/Makefile || sh config.status gllib/Makefile depfiles
	cd gllib; $(MAKE) ACLOCAL_M4="Makefile.am" CFLAGS="$(CFLAGS) -I$(INCLUDES)/.."; $(LN) libgnu.a ../libgnu_rx.a

# Make a module
clisp-module : all

# Make a module distribution into $(distribdir)
clisp-module-distrib : clisp-module force
	$(LN) $(DISTRIBFILES) $(distribdir)

clean : force
	rm -f core *.o *.a
	rm -f *.aux *.cp *.fn *.ky *.log *.pg *.toc *.tp *.vr

distclean : clean
	rm -f *.dvi

force :

