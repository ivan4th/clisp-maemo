# Makefile for libcharset

#### Start of system configuration section. ####


# Directories used by "make":
srcdir = @srcdir@

# Directories used by "make install":
prefix = @prefix@
local_prefix = /usr/local
exec_prefix = $(prefix)
libdir = $(exec_prefix)/lib
includedir = $(prefix)/include
mandir = $(prefix)/man

# Programs used by "make":
RM = rm -f
@SET_MAKE@

# Programs used by "make install":
INSTALL = @INSTALL@
INSTALL_DATA = @INSTALL_DATA@
MKINSTALLDIRS = $(SHELL) $(srcdir)/autoconf/mkinstalldirs

#### End of system configuration section. ####

SHELL = /bin/sh

all : force
	cd lib; $(MAKE) -r all

# Installs the library and include files only. Typically called with only
# $(libdir) and $(includedir) - don't use $(prefix) and $(exec_prefix) here.
install-lib : all force
	cd lib; $(MAKE) -r install-lib libdir='$(libdir)' includedir='$(includedir)'
	$(MKINSTALLDIRS) $(includedir)
	$(INSTALL_DATA) $(srcdir)/include/libcharset.h $(includedir)/libcharset.h

install : force
	cd lib; $(MAKE) -r install prefix='$(prefix)' exec_prefix='$(exec_prefix)' libdir='$(libdir)'
	$(MKINSTALLDIRS) $(DESTDIR)$(includedir)
	$(INSTALL_DATA) $(srcdir)/include/libcharset.h $(DESTDIR)$(includedir)/libcharset.h

installdirs : force
	cd lib; $(MAKE) -r installdirs prefix='$(prefix)' exec_prefix='$(exec_prefix)' libdir='$(libdir)'
	$(MKINSTALLDIRS) $(DESTDIR)$(includedir)

uninstall : force
	cd lib; $(MAKE) -r uninstall prefix='$(prefix)' exec_prefix='$(exec_prefix)' libdir='$(libdir)'
	$(RM) $(DESTDIR)$(includedir)/libcharset.h

check : force
	cd lib; $(MAKE) -r check

mostlyclean : force
	cd lib; $(MAKE) -r mostlyclean

clean : force
	cd lib; $(MAKE) -r clean

distclean : force
	cd lib; if test -f Makefile; then $(MAKE) -r distclean; fi
	$(RM) config.status config.log config.cache Makefile config.h libtool

maintainer-clean : force
	cd lib; if test -f Makefile; then $(MAKE) -r maintainer-clean; fi
	$(RM) config.status config.log config.cache Makefile config.h libtool

force :

