srcdir = @srcdir@

prefix = @prefix@
exec_prefix = @exec_prefix@
bindir = $(exec_prefix)/bin
libdir = $(exec_prefix)/lib
mandir = $(prefix)/man
man1dir = $(mandir)/man1
manext = 1

CC = @CC@
CFLAGS = @CFLAGS@
DEFS = @DEFS@
LIBS = @LIBS@
LDFLAGS = @LDFLAGS@
AR = ar
RANLIB = @RANLIB@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@


VPATH = @srcdir@
@SET_MAKE@

SHELL = /bin/sh

PROGS = hln
MANFILES = ln.1
LIBSOURCES = alloca.c argmatch.c backupfile.c basename.c dirname.c error.c \
             getopt.c getopt1.c getversion.c isdir.c realpath.c resolve.c \
             safe-lstat.c safe-stat.c stpcpy.c stripslash.c xmalloc.c yesno.c
LIBOBJECTS = @ALLOCA@ argmatch.o backupfile.o basename.o dirname.o error.o \
             getopt.o getopt1.o getversion.o isdir.o realpath.o resolve.o \
             safe-lstat.o safe-stat.o stpcpy.o stripslash.o xmalloc.o yesno.o
SOURCES = ln.c version.c
OBJECTS = ln.o version.o


all : libfu.a $(PROGS)

libfu.a: $(LIBOBJECTS)
	rm -f $@
	$(AR) rc $@ $(LIBOBJECTS)
	-$(RANLIB) $@

hln : ln.o version.o libfu.a
	$(CC) $(LDFLAGS) -o $@ ln.o version.o libfu.a $(LIBS)

.SUFFIXES:
.SUFFIXES: .c .o

.c.o:
	$(CC) -c $(CPPFLAGS) $(DEFS) -I. -I$(srcdir) $(CFLAGS) $<

safe-stat.o: safe-stat.h
safe-lstat.o: safe-lstat.h safe-stat.h
backupfile.o getversion.o ln.o: backupfile.h
getopt1.o: getopt.h
isdir.o: safe-stat.h

# Make all .o files depend on these files even though there are a few
# unnecessary dependencies.
$(OBJECTS): system.h pathmax.h version.h


installdirs:
	test -d $(bindir) || mkdir $(bindir)
	test -d $(mandir) || mkdir $(mandir)
	test -d $(man1dir) || mkdir $(man1dir)

install: all
	test -d $(bindir) || mkdir $(bindir)
	$(INSTALL_PROGRAM) hln $(bindir)/hln
	test -d $(mandir) || mkdir $(mandir)
	test -d $(man1dir) || mkdir $(man1dir)
	$(INSTALL_DATA) ln.1 $(man1dir)/hln.$(manext)

uninstall:
	rm -f $(bindir)/hln.1
	rm -f $(man1dir)/hln.$(manext)

check:

mostlyclean: clean

clean: force
	rm -f *.a *.o core

distclean: clean
	rm -f Makefile config.h config.status config.log config.cache

maintainer-clean: distclean

force:


# Tell versions [3.59,3.63) of GNU make not to export all variables.
# Otherwise a system limit (for SysV at least) may be exceeded.
.NOEXPORT:
